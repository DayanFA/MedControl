{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/MedControl/MedControl.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "${workspaceFolder}/MedControl/MedControl.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "type": "process",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/MedControl/MedControl.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish (Release)",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "${workspaceFolder}/MedControl/MedControl.csproj",
        "-c",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build installer (InnoSetup)",
      "type": "process",
      "command": "${env:ProgramFiles(x86)}\\Inno Setup 6\\ISCC.exe",
      "args": [
          "/O${workspaceFolder}\\tools\\installer\\dist",
        "/FMedControl-Setup-1.2.2",
        "tools/installer/MedControl.iss"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "publish + installer",
      "dependsOrder": "sequence",
      "dependsOn": [
        "publish (Release)",
        "build installer (InnoSetup)"
      ]
    }
  ]
}
